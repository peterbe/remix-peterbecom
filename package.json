{
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "npm run parcel:build && npm run build:remix",
    "build:remix": "remix build",
    "build:witholdbuildpreserved": "rm -fr /tmp/_old_build && node scripts/backup-old-build.mjs && npm run parcel:build && remix build && node scripts/restore-old-build.mjs",
    "parcel:build": "parcel build --dist-dir app/styles/build app/*.{css,scss}",
    "dev": "npm-run-all build --parallel \"dev:*\"",
    "dev:node": "cross-env NODE_ENV=development esrun --watch ./start-server.ts",
    "dev:remix": "remix watch",
    "dev:parcel": "parcel watch --dist-dir app/styles/build app/global.scss",
    "start": "cross-env NODE_ENV=production esrun ./start-server.ts",
    "tsc": "tsc",
    "lint": "eslint app",
    "lintfix": "eslint app --fix && npm run prettier:write",
    "test": "vitest --run",
    "test:watch": "vitest --watch",
    "prettier:write": "prettier --write app *.ts",
    "prettier:check": "prettier --check app *.ts",
    "prepare": "husky"
  },
  "dependencies": {
    "@picocss/pico": "2.0.6",
    "@remix-run/express": "2.10.3",
    "@remix-run/node": "2.10.3",
    "@remix-run/react": "2.10.3",
    "axios": "1.7.2",
    "axios-retry": "4.4.2",
    "compression": "1.7.4",
    "cross-env": "7.0.3",
    "downshift": "9.0.7",
    "esrun": "3.2.26",
    "express": "4.19.2",
    "express-async-handler": "1.2.0",
    "http-proxy-middleware": "3.0.0",
    "isbot": "5.1.13",
    "js-confetti": "0.12.0",
    "morgan": "1.10.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "rollbar": "2.26.4",
    "shrink-ray-current": "4.1.3",
    "swr": "2.2.5",
    "throttle-debounce": "5.0.2",
    "tiny-invariant": "1.3.3",
    "usehooks-ts": "3.1.0",
    "valibot": "0.37.0"
  },
  "devDependencies": {
    "@parcel/transformer-sass": "2.12.0",
    "@remix-run/dev": "2.10.3",
    "@remix-run/eslint-config": "2.10.3",
    "@types/morgan": "1.9.9",
    "@types/react": "18.3.3",
    "@types/react-dom": "18.3.0",
    "@types/throttle-debounce": "5.0.2",
    "@vitest/ui": "2.0.5",
    "cheerio": "1.0.0-rc.12",
    "dotenv": "16.4.5",
    "eslint": "8.57.0",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "husky": "9.1.4",
    "nodemon": "3.1.4",
    "npm-run-all": "4.1.5",
    "parcel": "2.12.0",
    "prettier": "3.3.3",
    "sharp": "0.33.4",
    "typescript": "5.5.4",
    "vitest": "2.0.5"
  },
  "engines": {
    "node": ">=16"
  }
}
